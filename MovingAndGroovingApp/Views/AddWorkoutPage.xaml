<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MovingAndGroovingApp.ViewModels"
             x:Class="MovingAndGroovingApp.Views.AddWorkoutPage"
             Title="Log Workout">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15" BackgroundColor="GhostWhite">
            <Picker x:Name="workoutTypePicker"
                    Title="Workout Type"
                    ItemsSource="{Binding WorkoutTypes}"
                    SelectedItem="{Binding SelectedWorkoutType, Mode=TwoWay}"
                    FontSize="20"
                    WidthRequest="450"
                    HorizontalTextAlignment="Center"/>

            <Entry x:Name="hoursEntry"
                    Placeholder="Hours"
                    Keyboard="Numeric"
                    WidthRequest="450"
                    HorizontalTextAlignment="Center"
                    FontSize="20"/>
            <Entry x:Name="minutesEntry"
                   Placeholder="Minutes"
                   Keyboard="Numeric"
                   WidthRequest="450"
                   HorizontalTextAlignment="Center"
                   FontSize="20"/>

            <DatePicker x:Name="datePicker"
                        Date="{Binding WorkoutDate, Mode=TwoWay}"
                        WidthRequest="450"
                        FontSize="20"
                        HorizontalOptions="Center"/>

            <Button Text="Save"
                    Clicked="OnSaveClicked"
                    WidthRequest="450"
                    BackgroundColor="CornflowerBlue"
                    FontSize="20"/>

            <Button Text="Go Back"
                    Clicked="OnBackClicked"
                    WidthRequest="450"
                    BackgroundColor="CornflowerBlue"
                    FontSize="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
