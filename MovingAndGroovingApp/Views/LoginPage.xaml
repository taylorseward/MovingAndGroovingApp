<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MovingAndGroovingApp.ViewModels"
             x:Class="MovingAndGroovingApp.Views.LoginPage"
             Title="Login"
             >

    <ScrollView >
        <VerticalStackLayout Padding="10" Spacing="15" BackgroundColor="#A9A9A9">
            <Image Source="logo_color.png" 
               HeightRequest="450" 
               WidthRequest="450"/>
            <Entry Text="{Binding Username}" 
               Placeholder="Username" 
               WidthRequest="450"
               HorizontalTextAlignment="Center"
               BackgroundColor="#2E2E2E"
               TextColor="#8B0000"/>
            <Entry Text="{Binding Password}" 
               Placeholder="Password" 
               IsPassword="True" 
               WidthRequest="450"
               HorizontalTextAlignment="Center"
               BackgroundColor="#2E2E2E"
               TextColor="#8B0000"/>
            <Button Text="Login" 
                Command="{Binding LoginCommand}"
                WidthRequest="450" 
                BackgroundColor="#8B0000" 
                FontSize="20"/>
            <Button Text="Register" 
                Command="{Binding NavigateToRegisterCommand}" 
                WidthRequest="450" 
                BackgroundColor="#8B0000"
                FontSize="20"/>
            <VerticalStackLayout>
                <Label Text="Â© Moving And Grooving Bay Bay! - 2025" 
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>