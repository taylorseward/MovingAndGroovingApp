<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovingAndGroovingApp.Views.WorkoutLogPage"
             Title="WorkoutLogPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Log Workout"
                     Clicked="OnAddWorkoutClicked"
                     Order="Primary"/>
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding Workouts}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout BackgroundColor="GhostWhite">
                    <Label Text="{Binding WorkoutType}"/>
                    <Label Text="{Binding Minutes}"/>
                    <Label Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>